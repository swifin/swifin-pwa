// apps/backend/prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id               String   @id @default(cuid())
  swifinId         String   @unique
  passwordHash     String   // ✅ Add this line
  name             String?
  email            String?
  birthday         String?   // ✅ Add this
  mobilePhone      String?   // ✅ Add this
  address          String?   // ✅ Add this
  postalCode       String?   // ✅ Add this
  city             String?   // ✅ Add this
  country          String?
  gender           String?
  memberType       String?
  profileConfirmed Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
